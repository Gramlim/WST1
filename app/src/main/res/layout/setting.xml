<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/view2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Степан Михайлович"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="#212121"
            app:srcCompat="@drawable/people" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onInfo"
        android:orientation="vertical">

        <Button
            android:id="@+id/swap_pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/chevron"
            android:gravity="center_vertical"
            android:onClick="onPasSWP"
            android:text="  Изменение пароля" />

        <Button
            android:id="@+id/swap_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/chevron"
            android:gravity="center_vertical"
            android:onClick="onLogSWP"
            android:text="  Изменение логина" />

        <Button
            android:id="@+id/history_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/chevron"
            android:gravity="center_vertical"
            android:text="  История посещений" />

        <Button
            android:id="@+id/inf_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/chevron"
            android:gravity="center_vertical"
            android:onClick="onInfo"
            android:text="  Информация о приложение" />

        <Button
            android:id="@+id/exit_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:drawableRight="@drawable/chevron"
            android:gravity="center_vertical"
            android:onClick="onExit"
            android:text="  Выход" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#212121"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/main_wind_png_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="#212121"
                app:srcCompat="@drawable/home" />

            <ImageButton
                android:id="@+id/pay_png_main_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#212121"
                app:srcCompat="@drawable/pay" />

            <ImageButton
                android:id="@+id/history_png_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#212121"
                app:srcCompat="@drawable/history" />

            <ImageButton
                android:id="@+id/dialog_png_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#212121"
                app:srcCompat="@drawable/dialogs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_wind_txt_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="Главный"
                android:textColor="#9B59B6"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/pay_txt_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="Платежи"
                android:textColor="#8E8E93"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/history_txt_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="История"
                android:textColor="#8E8E93"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dialog_txt_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="Диалоги"
                android:textColor="#8E8E93"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
